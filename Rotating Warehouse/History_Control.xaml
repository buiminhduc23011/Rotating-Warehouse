<UserControl x:Class="Rotating_Warehouse.History_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rotating_Warehouse"
             mc:Ignorable="d"
             d:DesignHeight="925"
             d:DesignWidth="1645">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top">
                <Grid Height="60"
                      Width="1410">
                    <Label Content="Lịch Sử Lỗi Máy"
                           Foreground="Black"
                           FontSize="25"
                           FontStyle="Normal"
                           FontWeight="Bold"
                           Margin="10,0,0,0"
                           VerticalAlignment="Top"
                           FontFamily="Source Sans Pro"></Label>
                </Grid>
                <Grid Height="60"
                      Width="235">
                    <Button Content="Xuất Tệp Excel"
                            Foreground="Black"
                            FontSize="15"
                            Height="40"
                            Width="200"
                            Background="CadetBlue"
                            FontStyle="Normal"
                            FontWeight="Bold"
                            VerticalAlignment="Center"
                            FontFamily="Source Sans Pro"></Button>
                </Grid>

            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top">
                <Grid Height="60"
                      Width="235">
                    <Label Content="Chọn Ngày"
                           Foreground="Black"
                           FontSize="15"
                           FontStyle="Normal"
                           FontWeight="Bold"
                           Margin="10,0,0,0"
                           VerticalAlignment="Top"
                           FontFamily="Source Sans Pro"></Label>
                    <DatePicker BorderBrush="Black"
                                BorderThickness="1"
                                Width="220"
                                Height="35"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="15"
                                FontStyle="Normal"
                                FontFamily="Source Sans Pro"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"></DatePicker>
                </Grid>
                <Grid Height="60"
                      Width="235">
                    <Label Content="Chọn Ca"
                           Foreground="Black"
                           FontSize="15"
                           FontStyle="Normal"
                           FontWeight="Bold"
                           Margin="10,0,0,0"
                           VerticalAlignment="Top"
                           FontFamily="Source Sans Pro"></Label>
                    <ComboBox BorderBrush="Black"
                              BorderThickness="1"
                              Width="220"
                              Height="35"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Center"
                              FontSize="15"
                              FontStyle="Normal"
                              FontFamily="Source Sans Pro"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Center"></ComboBox>
                </Grid>

                <Grid Height="60"
                      Width="235">

                    <Button Content="Tìm Kiếm"
                            Width="220"
                            Height="35"
                            VerticalContentAlignment="Center"
                            Background="#3499df"
                            HorizontalContentAlignment="Center"
                            FontSize="15"
                            FontStyle="Normal"
                            FontFamily="Source Sans Pro"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"></Button>
                </Grid>

            </StackPanel>
            <DataGrid x:Name="Data"
                      AutoGenerateColumns="False"
                      FontSize="12"
                      Height="800"
                      Width="1643"
                      Margin="0,5,0,0"
                      Foreground="Black"
                      BorderBrush="Black"
                      BorderThickness="1"
                      HorizontalGridLinesBrush="Black"
                      CanUserResizeColumns="False"
                      CanUserResizeRows="False"
                      IsReadOnly="True"
                      Grid.ColumnSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT"
                                        Binding="{Binding STT}"
                                        Width="55">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment"
                                        Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Nội Dung Lỗi"
                                        Binding="{Binding Time}"
                                        Width="500" />
                    <DataGridTextColumn Header="Cách Xử Lý"
                                        Binding="{Binding Content_}"
                                        Width="500" />
                    <DataGridTextColumn Header="Ca Sản Xuất"
                                        Binding="{Binding Content_}"
                                        Width="100" />
                    <DataGridTextColumn Header="Thời Gian"
                                        Binding="{Binding Content_}"
                                        Width="300" />

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

    </Grid>
</UserControl>

